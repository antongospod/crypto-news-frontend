{
  "id": null,
  "uid": "cryptocenter-monitoring-v2",
  "title": "ðŸš€ CryptoCenter Infrastructure Dashboard",
  "tags": ["docker", "container", "cryptocenter", "infrastructure"],
  "timezone": "browser",
  "refresh": "10s",
  "schemaVersion": 30,
  "version": 2,
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "ðŸŸ¢ System Health Overview",
      "type": "stat",
      "gridPos": {"h": 4, "w": 24, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "up{job=\"node-exporter\"}",
          "legendFormat": "ðŸ–¥ï¸ Server",
          "refId": "A"
        },
        {
          "expr": "up{job=\"cadvisor\"}",
          "legendFormat": "ðŸ“Š Container Monitor",
          "refId": "B"
        },
        {
          "expr": "count(container_last_seen{name=~\"nuxt-app|nginx|prometheus|grafana\"})",
          "legendFormat": "ðŸ³ Active Services",
          "refId": "C"
        },
        {
          "expr": "(node_filesystem_avail_bytes{mountpoint=\"/\"} / node_filesystem_size_bytes{mountpoint=\"/\"}) * 100",
          "legendFormat": "ðŸ’¾ Disk Available %",
          "refId": "D"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "yellow", "value": 0.8},
              {"color": "green", "value": 1}
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "ðŸ–¥ï¸ Frontend & Web Services",
      "type": "row",
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 4},
      "collapsed": false
    },
    {
      "id": 3,
      "title": "âš¡ Nuxt.js App - CPU Usage",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 0, "y": 5},
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{name=\"nuxt-app\"}[5m]) * 100",
          "legendFormat": "CPU %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "max": 100,
          "min": 0,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 50},
              {"color": "red", "value": 80}
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "ðŸ’¾ Nuxt.js App - Memory Usage",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 8, "y": 5},
      "targets": [
        {
          "expr": "container_memory_usage_bytes{name=\"nuxt-app\"} / 1024 / 1024",
          "legendFormat": "Memory MB",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decbytes",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 200},
              {"color": "red", "value": 500}
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "ðŸŒ Nginx - HTTP Requests",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 16, "y": 5},
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{name=\"nginx\"}[5m]) * 100",
          "legendFormat": "Nginx CPU %",
          "refId": "A"
        },
        {
          "expr": "container_memory_usage_bytes{name=\"nginx\"} / 1024 / 1024",
          "legendFormat": "Nginx Memory MB",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 6,
      "title": "ðŸ“Š Monitoring Services",
      "type": "row",
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 11},
      "collapsed": false
    },
    {
      "id": 7,
      "title": "ðŸ“ˆ Grafana Dashboard Service",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 0, "y": 12},
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{name=\"grafana\"}[5m]) * 100",
          "legendFormat": "CPU %",
          "refId": "A"
        },
        {
          "expr": "container_memory_usage_bytes{name=\"grafana\"} / 1024 / 1024",
          "legendFormat": "Memory MB",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 8,
      "title": "âš™ï¸ Prometheus Metrics Storage",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 8, "y": 12},
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{name=\"prometheus\"}[5m]) * 100",
          "legendFormat": "CPU %",
          "refId": "A"
        },
        {
          "expr": "container_memory_usage_bytes{name=\"prometheus\"} / 1024 / 1024",
          "legendFormat": "Memory MB",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 9,
      "title": "ðŸ” Container Monitor (cAdvisor)",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 16, "y": 12},
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{name=\"cadvisor\"}[5m]) * 100",
          "legendFormat": "CPU %",
          "refId": "A"
        },
        {
          "expr": "container_memory_usage_bytes{name=\"cadvisor\"} / 1024 / 1024",
          "legendFormat": "Memory MB",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 10,
      "title": "ðŸŒ Network & Traffic",
      "type": "row",
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 18},
      "collapsed": false
    },
    {
      "id": 11,
      "title": "ðŸ“¡ Network Traffic Overview",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 19},
      "targets": [
        {
          "expr": "rate(container_network_receive_bytes_total{name=\"nuxt-app\"}[5m])",
          "legendFormat": "â¬‡ï¸ Nuxt App - Incoming",
          "refId": "A"
        },
        {
          "expr": "rate(container_network_transmit_bytes_total{name=\"nuxt-app\"}[5m])",
          "legendFormat": "â¬†ï¸ Nuxt App - Outgoing",
          "refId": "B"
        },
        {
          "expr": "rate(container_network_receive_bytes_total{name=\"nginx\"}[5m])",
          "legendFormat": "â¬‡ï¸ Nginx - Incoming",
          "refId": "C"
        },
        {
          "expr": "rate(container_network_transmit_bytes_total{name=\"nginx\"}[5m])",
          "legendFormat": "â¬†ï¸ Nginx - Outgoing",
          "refId": "D"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "binBps",
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 12,
      "title": "ðŸ–¥ï¸ Server Resources",
      "type": "row",
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 27},
      "collapsed": false
    },
    {
      "id": 13,
      "title": "âš¡ Server CPU Load",
      "type": "timeseries",
      "gridPos": {"h": 6, "w": 8, "x": 0, "y": 28},
      "targets": [
        {
          "expr": "node_load1",
          "legendFormat": "ðŸ“Š 1 minute",
          "refId": "A"
        },
        {
          "expr": "node_load5",
          "legendFormat": "ðŸ“Š 5 minutes",
          "refId": "B"
        },
        {
          "expr": "node_load15",
          "legendFormat": "ðŸ“Š 15 minutes",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 14,
      "title": "ðŸ’¾ Server Memory",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 8, "y": 28},
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
          "legendFormat": "ðŸ”´ Used %",
          "refId": "A"
        },
        {
          "expr": "node_memory_MemAvailable_bytes / 1024 / 1024 / 1024",
          "legendFormat": "ðŸŸ¢ Available GB",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        }
      }
    },
    {
      "id": 15,
      "title": "ðŸ’¿ Disk I/O Operations",
      "type": "timeseries",
      "gridPos": {"h": 6, "w": 8, "x": 16, "y": 28},
      "targets": [
        {
          "expr": "rate(node_disk_read_bytes_total[5m])",
          "legendFormat": "ðŸ“– Read {{device}}",
          "refId": "A"
        },
        {
          "expr": "rate(node_disk_written_bytes_total[5m])",
          "legendFormat": "âœï¸ Write {{device}}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "binBps",
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 16,
      "title": "ðŸ› ï¸ Service Status & Uptime",
      "type": "table",
      "gridPos": {"h": 6, "w": 24, "x": 0, "y": 34},
      "targets": [
        {
          "expr": "container_start_time_seconds{name=~\"nuxt-app|nginx|prometheus|grafana|cadvisor\"}",
          "legendFormat": "{{name}}",
          "refId": "A",
          "format": "table"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "dateTimeAsIso"
        }
      },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "name": "ðŸ³ Service",
              "Value": "ðŸ• Started At"
            }
          }
        }
      ]
    }
  ],
  "templating": {
    "list": [
      {
        "name": "service",
        "type": "query",
        "query": "label_values(container_last_seen, name)",
        "refresh": 1,
        "includeAll": true,
        "allValue": ".*",
        "multi": true,
        "label": "ðŸ³ Container Service"
      }
    ]
  },
  "annotations": {
    "list": [
      {
        "name": "ðŸ”„ Service Restarts",
        "enable": true,
        "iconColor": "#FF6B6B",
        "query": "changes(container_start_time_seconds[1h]) > 0"
      }
    ]
  }
}