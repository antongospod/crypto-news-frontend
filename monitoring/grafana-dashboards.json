{
  "dashboard": {
    "id": null,
    "title": "CryptoCenter Monitoring",
    "tags": ["docker", "container"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{name=\"nuxt-app\"}[5m]) * 100",
            "legendFormat": "CPU %"
          }
        ]
      },
      {
        "id": 2,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{name=\"nuxt-app\"} / 1024 / 1024",
            "legendFormat": "Memory MB"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
  }
}